<Window x:Class="Laboratorio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="40">

            <TextBox x:Name="txtUsername" Height="30" Width="200"   />
            <StackPanel Margin="15">
                <PasswordBox x:Name="txtContra"   Height="30" Width="200"  />
               </StackPanel>
            <Button  Content="Iniciar Sesión" Height="30" Width="200"  Background="Green" Click="Button_Click"/>
        </StackPanel>

     

    </Grid>
</Window>
